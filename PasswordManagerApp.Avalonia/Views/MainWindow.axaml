<Window
    x:Class="PasswordManagerApp.Avalonia.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PasswordManagerApp.Avalonia.ViewModels"
    Title="PasswordManagerApp"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainWindowViewModel"
    mc:Ignorable="d">
    <StackPanel
        Margin="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Button Background="Green" Content="Hello World" />
        <Button Background="Red" Content="Hello World 2" />
        <TextBlock Classes="h1">Heading 1</TextBlock>
        <Button Content="{Binding Greeting}" />
    </StackPanel>
</Window>
